<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/popup_bg"
    android:padding="10dp"
    android:layout_gravity="center">
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Key In Gross Salary"
        android:textColor="@color/white"
        android:textSize="20dp">

    </TextView>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:drawableLeft="@drawable/rm"
        android:inputType="numberDecimal"
        android:background="@drawable/editext_rounded_corners"
        android:id="@+id/signup_input_fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/gross_salary"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textAllCaps="false">
    </Button>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Net Salary"
               android:layout_marginLeft="20dp"
               android:textColor="@color/white">

           </TextView>
           <TextView
               android:gravity="center"
               android:textStyle="bold|italic"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Rm 4500"
               android:textColor="@color/white"
               android:textSize="45dp">
           </TextView>
       </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EPF">
            </TextView>
            <TextView
                android:textSize="20dp"

                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOCSO">
            </TextView>
            <TextView
                android:textSize="20dp"

                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EIS">
            </TextView>



        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:padding="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 585.00">
            </TextView>
            <TextView
                android:textSize="20dp"

                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rm 77.85">
            </TextView>
            <TextView
                android:textSize="20dp"

                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 8.90">
            </TextView>



        </LinearLayout>


    </LinearLayout>






</LinearLayout>












