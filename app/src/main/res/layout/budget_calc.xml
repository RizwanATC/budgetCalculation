<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_horizontal"
        android:elevation="10dp"
        android:background="@drawable/bottom_round_corner"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back">
            </ImageButton>

        </LinearLayout>


            <TextView
                android:textAllCaps="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keperluan % | Kemahuan % | Simpanan % "
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
               />
        <TextView
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/editext_rounded_corners"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:id="@+id/tv_budget"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="none"
            android:textColor="@color/purple_500"
            android:text="Choose Budget"
           >
        </TextView>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/ly_Custom"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:maxLength="2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/editext_rounded_corners">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white">
            </TextView>
            <EditText
                android:maxLength="2"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/editext_rounded_corners">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white">
            </TextView>
            <EditText
                android:maxLength="2"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/editext_rounded_corners">
            </EditText>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Salary"
                android:textSize="14dp">
            </TextView>
            <TextView
                android:textColor="@color/green"
                android:gravity="center"
                android:id="@+id/tv_netSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Net Salary"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/dialog_bg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <!--keperluan-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keperluan">
            </TextView>
            <TextView
                android:id="@+id/tv_percKeperluan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%">
            </TextView>
            <TextView
                android:id="@+id/calCKeperluann"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rm 4500">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:layout_gravity=""
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/line_vertical">

            </ImageView>
        </LinearLayout>
        <!--Kemahuan-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kemahuan">
            </TextView>
            <TextView
                android:id="@+id/tv_percKemahuan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%">
            </TextView>
            <TextView
                android:id="@+id/calCkemahuan"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rm 4500">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:layout_gravity=""
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/line_vertical">

            </ImageView>
        </LinearLayout>
        <!--Simpanan-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpanan">
            </TextView>
            <TextView
                android:id="@+id/tv_percSimpanan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%">
            </TextView>
            <TextView
                android:id="@+id/tv_percKemahuan"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rm 4500">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>